<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pokinboroda.andriy.com.foxhunting" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pokinboroda.andriy.foxhunting.GameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pokinboroda.andriy.foxhunting.ScoreActivity"
            android:label="@string/title_activity_score"
            android:parentActivityName="com.pokinboroda.andriy.foxhunting.GameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pokinboroda.andriy.foxhunting.GameActivity" />
        </activity>
        <activity
            android:name="com.pokinboroda.andriy.foxhunting.RulesActivity"
            android:label="@string/title_activity_rules"
            android:parentActivityName="com.pokinboroda.andriy.foxhunting.GameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pokinboroda.andriy.foxhunting.GameActivity" />
        </activity>
    </application>

</manifest>
